<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.whistlist.WhistlistFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_margin="25dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Favorite Flight"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etSearchTiket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_input"
            android:drawableRight="@drawable/search_normal"
            android:drawablePadding="12dp"
            android:layout_marginTop="25dp"
            android:ems="10"
            android:hint="Cari favorit ..."
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/header_title"
            tools:ignore="Autofill,TextFields" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvFavorit"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/etSearchTiket"
            tools:listitem="@layout/item_wishlist" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>