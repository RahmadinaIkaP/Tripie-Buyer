<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.authentication.register.RegisterFragment">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_marginLeft="25dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_baseline_arrow_back_24" />


        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btn_back"
        android:layout_margin="25dp">

        <TextView
            android:id="@+id/titleDaftarAkun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Daftar akun"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/titleMendaftarSebagai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleDaftarAkun"
            android:layout_marginTop="10dp"
            android:text="Mendaftar sebagai : "
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etNamaLengkap"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleMendaftarSebagai"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/custom_input"
            android:drawablePadding="12dp"
            android:ems="10"
            tools:ignore="Autofill,TextFields" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/etNamaLengkap"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_input"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="Nama Lengkap"
            android:padding="10dp"
            tools:ignore="Autofill,TextFields" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/etEmail"
            android:layout_marginTop="20dp"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="Password"
            android:padding="10dp"
            tools:ignore="Autofill,TextFields" />

        <EditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/etPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_input"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="Ulangi Password"
            android:padding="10dp"
            tools:ignore="Autofill,TextFields" />

        <Button
            android:id="@+id/btn_daftar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:backgroundTint="#0095F6"
            android:text="Daftar"

            />


    </RelativeLayout>


</RelativeLayout>